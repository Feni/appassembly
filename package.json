    "@babel/preset-react": "^7.9.1",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.4",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-import": "^1.13.0",
    "babel-preset-react-app": "^3.1.2",
    "browser-sync": "^2.26.7",
    "clean-css": "^4.2.3",
    "copy-webpack-plugin": "^4.5.0",
    "css-loader": "^2.1.1",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-purgecss": "^1.2.0",
    "gulp-sass": "^4.0.2",
    "jest": "^26.3.0",
    "jest-silent-reporter": "^0.2.1",
    "mini-css-extract-plugin": "^0.4.0",
